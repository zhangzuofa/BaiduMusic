<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_delete_item_listview_popupwindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_list_dropdown_garbage_normal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:id="@+id/ll_item_listview_popupwindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@id/iv_delete_item_listview_popupwindow">
    <TextView
        android:id="@+id/tv_title_item_listview_popupwindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="aaa"/>

    <TextView
        android:id="@+id/tv_author_item_listview_popupwindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaa"/>
    </LinearLayout>




</RelativeLayout>
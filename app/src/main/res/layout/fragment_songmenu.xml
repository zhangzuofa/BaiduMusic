<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_songmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_all_songmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="8dp"
            android:drawableRight="@mipmap/bt_mv_pull_down_normal"
            android:text="全部"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/tv_now_songmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最热"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/img_munu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/img_live_integral"
            android:layout_toLeftOf="@id/tv_now_songmenu"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_hot_songmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新"
            android:layout_marginRight="5dp"
            android:textColor="#000000"
            android:layout_toLeftOf="@id/img_munu"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_song_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>